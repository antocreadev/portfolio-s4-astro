            <p class="text-justify overflow-hidden line-clamp-4">
              {`${projet2[0].frontmatter.description}`}
            </p>
            <div class="card-actions justify-end">
              <a
                href={projet2[0].url}
                class="btn btn-primary border-none"
                style="background-color: #ff824b; ">Voir plus</a
              >
            </div>
          </div>
        </div>
      </div>

      <!-- 3 -->
      <div class="p-7">
        <div
          class="card w-80 xl:w-[32rem] lg:w-[25rem] md:w-[43rem] sm:w-[35rem] bg-base-100 shadow-xl"
