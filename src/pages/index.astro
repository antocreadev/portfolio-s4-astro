import Layout from "../layouts/global.layout.astro";

const projet1 = await Astro.glob("./projects/SAE302.md");
const projet2 = await Astro.glob("./projects/SAE301.md");
const projet3 = await Astro.glob("./projects/SAE103.md");
---

<Layout>
  <style>
    .imgMain {
      overflow: hidden;
    }

    .cardColor {
      background-color: #353e4e !important;
    }

    .btnColor {
      background: #ff824b m !important;
    }

    .bg-projects {
      background-image: url("/img/home/projetcs50.webp") !important;
      background-size: cover !important;
      background-position: right !important;
      background-repeat: no-repeat !important;
    }
  </style>

  <!-- IMAGES POSITIONS ABSOLUTE -->
  <img
    class="absolute top-[5vh] sm:top-[-18vh] lg:top-[-12vh] lg:left-[5vw] imgMaib w-full lg:w-9/12 opacity-50 lg:opacity-100 z-[-100]"
    src="img/home/home.webp"
    alt=""
  />
  <!-- <img
    class="hidden absolute imgMain opacity-50 lg:block z-[-100] top-[100vh] left-[-40vw]"
    src="img/home/projetcs.webp"
    alt=""
  /> -->

  <!-- hero section -->
  <section
    class="pl-[5vw] pr-[5vw] xl:min-h-[100vh] flex flex-col items-end"
    id="home"
  >
    <div class="w-full lg:w-1/2 xl:h-[80vh] relative xl:top-[25vh] z-[2]">
      <h1
        class="text-4xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl 2xl:text-7xl mt-24 text-center lg:text-start"
      >
        PORTFOLIO
      </h1>
      <h2 class="text-xl md:text-2xl lg:text-3xl xl:text-4xl 2xl:text-5xl">
        Anthony Menghi
      </h2>
      <h3 class="text-lg xl:text-xl 2xl:text-2xl">alias antocreadev</h3>
      <p class="text-base text-justify">
        Étudiant en BUT MMI à l'Université de Corse Pascal Paoli, je suis
        passionné par la création. J'aime créer et entreprendre des nouvelles
        choses. Je souhaite devenir développeur fullstack spécialisé dans les
        médias interactifs ou dans les jeux vidéo.
      </p>
    </div>
  </section>

  <!-- PROJETS -->
  <section class="pr-[5vw] pl-[5vw] bg-projects">
    <h1
      class="text-4xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl 2xl:text-7xl mt-24 text-center"
    >
      PROJETS
    </h1>

    <!-- 1 -->
    <div class="projects_all">
      <div class="p-7">
        <div
          class="card w-[19rem] xl:w-[32rem] lg:w-[25rem] md:w-[43rem] sm:w-[35rem] bg-base-100 shadow-xl cardColor"
        >
          <figure class="min-w-[100%] max-w-[100%] min-h-[200px] max-h-[200px]">
            <img
              src={`/img/heroImg/${projet1[0].frontmatter.heroImg}`}
              alt="Shoes"
            />
          </figure>
          <div class="card-body">
            <h2 class="card-title">{`${projet1[0].frontmatter.title}`}</h2>
            <p class="text-justify overflow-hidden line-clamp-4">
              {`${projet1[0].frontmatter.description}`}
            </p>
            <div class="card-actions justify-end">
              <a
                href={projet1[0].url}
                class="btn btn-primary border-none"
                style="background-color: #ff824b; ">Voir plus</a
              >
            </div>
          </div>
        </div>
      </div>

      <!-- 2 -->
      <div class="p-7">
        <div
          class="card w-80 xl:w-[32rem] lg:w-[25rem] md:w-[43rem] sm:w-[35rem] bg-base-100 shadow-xl"
        >
          <figure class="min-w-[100%] max-w-[100%] min-h-[200px] max-h-[200px]">
            <img
              src={`/img/heroImg/${projet2[0].frontmatter.heroImg}`}
              alt="Shoes"
            />
          </figure>
          <div class="card-body rounded-b-xl cardColor">
            <h2 class="card-title">{`${projet2[0].frontmatter.title}`}</h2>
            <p class="text-justify overflow-hidden line-clamp-4">
              {`${projet2[0].frontmatter.description}`}
            </p>
