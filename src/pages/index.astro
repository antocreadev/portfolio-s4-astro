<Layout>
  <style>
    .imgMain {
      overflow: hidden;
    }

    .cardColor {
      background-color: #353e4e !important;
    }

    .btnColor {
      background: #ff824b m !important;
    }

    .bg-projects {
      background-image: url("/img/home/projetcs50.webp") !important;
      background-size: cover !important;
      background-position: right !important;
      background-repeat: no-repeat !important;
    }
  </style>

  <!-- IMAGES POSITIONS ABSOLUTE -->
  <img
    class="absolute top-[5vh] sm:top-[-18vh] lg:top-[-12vh] imgMaib w-full lg:w-9/12 opacity-50 lg:opacity-100 z-[-100]"
    src="img/home/home.webp"
    alt=""
  />
