  h1, h2, h3{
    font-family: DM Mono Regular;
  }
  p{
    font-family: DM Mono Regular, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

  }
