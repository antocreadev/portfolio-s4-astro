---
// get current url with astro router getStaticPaths  and getStaticProps
// https://docs.astro.build/reference/api/#router
console.log(Astro.url.pathname);
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <div class="drawer">
      <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col">
        {/* <!-- Navbar --> */}
        <header class="z-[9999]">
          <nav
            class="w-full navbar fixed border-b-2 border-neutral-900 backdrop-blur z-100"
          >
            <div class="flex-none lg:hidden">
              <label for="my-drawer-3" class="btn btn-square btn-ghost">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  class="inline-block w-6 h-6 stroke-current"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16"></path></svg
                >
              </label>
            </div>
            <div class="flex-none hidden lg:block">
              <ul class="menu menu-horizontal navbar-start">
                {/* <!-- Navbar menu content here --> */}
                {
                  Astro.url.pathname === '/' ?
                  <li><a href="#projects">Projets</a></li>
                  <li><a href="#skills">Compétences</a></li>
                  <li><a href="#about">À propos</a></li>
                  <li><a href="#contact">Contact</a></li>
                  : Astro.url.pathname === '/projects' ? 
                  <li><a href="projects">Projets</a></li>
                  <li><a href="../#skills">Compétences</a></li>
                  <li><a href="../#about">À propos</a></li>
                  <li><a href="../#contact">Contact</a></li>
                  : 
                  <li><a href="../projects">Projets</a></li>
                  <li><a href="../../#skills">Compétences</a></li>
                  <li><a href="./../#about">À propos</a></li>
                  <li><a href="../../#contact">Contact</a></li>
                }
              </ul>
            </div>
            <a href="./">
              <img
                class="absolute left-1/2"
                style="transform : translate(-50%, 0%)"
                src="/img/home/logo.svg"
                alt=""
              />
            </a>
          </nav>
        </header>
        <!-- {children} -->
        <slot />
      </div>
      <nav class="drawer-side">
        <label for="my-drawer-3" class="drawer-overlay"></label>
        <nav class="menu p-4 w-10/12 bg-slate-100">
          <ul class="bg-slate-100">
            {
              Astro.url.pathname === '/' ?
              <li><a href="#projects">Projets</a></li>
              <li><a href="#skills">Compétences</a></li>
              <li><a href="#about">À propos</a></li>
              <li><a href="#contact">Contact</a></li>
              : Astro.url.pathname === '/projects' ? 
              <li><a href="projects">Projets</a></li>
              <li><a href="../#skills">Compétences</a></li>
              <li><a href="../#about">À propos</a></li>
              <li><a href="../#contact">Contact</a></li>
              : 
              <li><a href="../projects">Projets</a></li>
              <li><a href="../../#skills">Compétences</a></li>
              <li><a href="./../#about">À propos</a></li>
              <li><a href="../../#contact">Contact</a></li>
            }
          </ul>
        </nav>
      </nav>
    </div>
  </body>
</html>
